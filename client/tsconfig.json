{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
      },
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true ,
    "esModuleInterop": true,
    "types": ["@types/jest"]
  },
  "include": ["src"]
}
